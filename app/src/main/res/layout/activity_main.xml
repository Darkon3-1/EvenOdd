<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main">

    <TextView
        android:layout_width="150dp"
        android:layout_height="430dp"
        android:id="@+id/textViewEven" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="430dp"
        android:id="@+id/textViewOdd"
        android:layout_alignTop="@+id/textViewEven"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Files"
        android:id="@+id/buttonCreate"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="createFile"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Files"
        android:id="@+id/buttonLoad"
        android:layout_alignTop="@+id/buttonCreate"
        android:layout_toRightOf="@+id/buttonCreate"
        android:layout_toEndOf="@+id/buttonCreate"
        android:onClick="loadFile"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/buttonStop"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonLoad"
        android:layout_toEndOf="@+id/buttonLoad"
        android:onClick="stopLoad"/>

</RelativeLayout>
